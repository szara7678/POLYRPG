{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "@engine/*": ["src/engine/*"],
      "@renderer/*": ["src/renderer/*"],
      "@workers/*": ["src/workers/*"]
    }
  },
  "include": ["src", "vite.config.ts"]
}


